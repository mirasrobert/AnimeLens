<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.imotaku">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="IMOTAKU"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImOtaku">


        <activity
            android:name=".EditUserActivity"
            android:label="User Information Update"
            android:parentActivityName=".FullscreenActivity"/>
        <activity
            android:name=".FavoriteActivity"
            android:label="MY FAVORITES" />
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".FullscreenActivity"/>
        <activity
            android:name=".FeedbackActivity"
            android:label="FEEDBACK"
            android:parentActivityName=".FullscreenActivity" />
        <activity
            android:name=".DevelopersActivity"
            android:label="DEVELOPERS"
            android:parentActivityName=".FullscreenActivity" />
        <activity android:name=".SearchActivity" />

        <activity android:name=".RegisterActivity"
            android:parentActivityName=".LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="SIGN UP"
            android:theme="@style/Theme.ImOtaku.Fullscreen" />
        <activity
            android:name=".AnimeDescriptionActivity"
            android:label="@string/description_title" />
        <activity
            android:name=".GenreActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/category"
            android:theme="@style/Theme.ImOtaku.Fullscreen" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/browse_anime"
            android:theme="@style/Theme.ImOtaku.Fullscreen" />
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>